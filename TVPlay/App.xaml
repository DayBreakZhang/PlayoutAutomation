<Application x:Class="TAS.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:common="clr-namespace:TAS.Client.Common;assembly=TAS.Client.Common"
             StartupUri="MainWindow.xaml" DispatcherUnhandledException="Application_DispatcherUnhandledException"
             >

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/TAS.Client.Common;component/Converters.xaml"/>
                <ResourceDictionary Source="/TAS.Client.Common;component/Styles/Styles.xaml"/>
                <ResourceDictionary Source="/TAS.Client.Common;component/Controls/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
